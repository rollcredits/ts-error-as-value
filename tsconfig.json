{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2016.array.include",
      "es2017.object"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5",
    "declaration": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "outDir": "./lib/"
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./types",
    "src/**/*.unit.test.ts",
    "src/types-scratch-board.ts"
  ]
}
